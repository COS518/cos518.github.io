#!/usr/bin/env bash

usage() {
  echo "Usage: $0 [-m COMMIT_MESSAGE]" 1>&2; exit 1;
}

HOST=cycles.cs.princeton.edu
PUBDIR=/n/fs/csweb/courses/archive/spr18/cos518
PRINCETON_USER=${PRINCETON_USER:-$USER}

publish() {
  # Yeah, this is aggressive, but whatever
  git pull
  git add .

  # Commit and push
  git commit -am "$1"
  git push

  jekyll build

  # Sync to cycles
  rsync \
    -rltvO \
    --perms \
  	--delete \
    --protocol=26 \
    --chmod=ug+rw,a+r,o-w \
    --exclude Makefile \
    --exclude '.*.swp' \
    --exclude .DS_Store \
    --exclude .gitignore \
    --exclude '*~' \
    --exclude '.git*' \
    --exclude bin \
    --exclude archive \
    --exclude staging \
    --copy-links \
    _site/* \
    $PRINCETON_USER@$HOST:$PUBDIR

  ssh $PRINCETON_USER@$HOST "find $PUBDIR ! -path $PUBDIR | xargs chgrp -R cos518"
}

while getopts "m:" opt; do
  case $opt in
    m)
      m=$OPTARG
      publish "$m"
      ;;
    *)
      usage
      ;;
  esac
done

shift $((OPTIND-1))
if [ -z "$m" ]; then
    usage
fi
